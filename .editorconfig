root = true

[*.{js,vue,css,json,rules}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Don't restructure 3rd party files, even by mistake
[node_modules/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[Dockerfile]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
